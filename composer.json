		"symfony/console": "~2.8|~3.0|~4.0",
		"symfony/http-kernel": "~2.8|~3.0|~4.0"
	},
	"require-dev": {
		"smarty/smarty": "~3.1",
		"mockery/mockery": "~1.0",
		"phpunit/phpunit": "6.0.*",
		"phpunit/php-code-coverage": "5.*",
		"satooshi/php-coveralls": "1.0.0",
		"symfony/polyfill-php70": "^1.10"
	},
	"suggest": {
		"ext-redis": "*",
		"ext-memcache": "*"
	}
