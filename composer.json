{
	"name": "infuse/infuse",
	"description": "Modular framework for building modern applications",
	"type": "library",
	"keywords": ["infuse","framework"],
	"license": "MIT",
	"authors": [
		{
			"name": "jaredtking",
			"email": "j@jaredtking.com",
			"homepage": "http://jaredtking.com"
		}
	],
	"support": {
		"issues": "https://github.com/infusephp/infuse/issues",
		"source": "https://github.com/infusephp/infuse"
